{
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"]
    },
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
