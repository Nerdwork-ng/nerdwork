{
  "name": "nerdwork-platform",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "cdk": "cd infra && cdk",
    "deploy": "cdk deploy --all"
  },
  "devDependencies": {
    "aws-cdk": "^2.1018.1",
    "turbo": "^2.5.4"
  }
}